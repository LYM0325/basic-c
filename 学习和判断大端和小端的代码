#include<stdio.h>
int main()
{
	int i =-10;
	//10000000 00000000 00000000 00001010
	//11111111 11111111 11111111 11110101
	//11111111 11111111 11111111 11110110
	//数据在内存中以2进制的形式储存，正整数原码，反码，补码一样，负整数的原码，反码，补码需要计算 
	//整数在内存中存的是补码
	int n = 0x11223344; 
	//大端字节序：数据的低位字节序的内容存放在高地址处，高位字节序的内容存在低地址处 
	//11 22 33 44
	//小端字节序：数据的低位字节序存的内容放在低地址处，高位字节序的内容放在高地址处
	//44 33 22 11
	//写一个程序判断当前机器的字节序
	int a = 1; 
	char*p = (char*)&a;
	if(*p == 1)
		printf("小端");
	else
		printf("大端");
	return 0;
}
