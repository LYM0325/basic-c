#include<stdio.h>

int main()
{
//移位操作符：移动的是二进制位
	int a = 1;
//整型1占四个字节-32个比特
	printf("%d",a<<1);
//表示a的二进制序列左移一位,结果是2； 
	printf("%d",a<<2);
//结果是4；
//右移的效果相似

//位操作 
int b = 3;
int c = 5;
//  & 按位与 
printf("%d",a&b);
//  | 按位或 
printf("%d",a|b); 
//  ^ 按位异或 相同为0，不同为1； 
printf("%d",a^b);

int arr[10] = {0};
printf("%d",sizeof(arr));//输出的结果是40，所以想要输出数组的长度应该改成printf("%d",szieof(arr)/sizeof(int));
	return 0;
}
